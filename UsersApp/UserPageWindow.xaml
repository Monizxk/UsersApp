<Window x:Class="UsersApp.UserPageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UsersApp"
                mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Додаток для користувачів" Height="600" Width="800">
    <Grid Background = "#2B124C">
        <TextBox x:Name="examplText" FontWeight="Bold" Margin="0 0 0 20"></TextBox>
        <Border             MinWidth="400" Margin="15"  Background= "#fbe6db" VerticalAlignment="Center" Padding="30" CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" Color="LightPink" ShadowDepth="0">
                </DropShadowEffect>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text= "Кабінет користувача" FontSize = "30" FontWeight="Bold" Margin="0 0 0 20"/>
                <ListView x:Name="listOfUsers" Margin="10"></ListView>
            </StackPanel>
        </Border>
    </Grid>
</Window>
